generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Interest {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String
  accounts    Account[]
}

model Account {
  id           Int        @id @unique @default(autoincrement())
  type         String     @default("user")
  username     String     @unique
  firstName    String
  lastName     String
  phoneNumber  String     @unique
  email        String     @unique
  password     String
  interests    Interest[]
  events       Event[]    @relation("eventcreater")
  joinedEvents Event[]    @relation("participant")
}

model Event {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  startDate    DateTime
  endDate      DateTime
  time         String
  location     String
  activityId   Int
  activity     Activity  @relation(fields: [activityId], references: [id])
  creatorId    Int
  creator      Account   @relation("eventcreater", fields: [creatorId], references: [id])
  participants Account[] @relation("participant")
  peopleNeeded Int
}

model Activity {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  type   String
  events Event[]
}
