generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Interest {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  users       User[]
}

model User {
  id          Int        @id @unique @default(autoincrement())
  firstName   String
  lastName    String
  phoneNumber String     @unique
  email       String     @unique
  password    String
  gender      String
  interests   Interest[]
  posts       Post[]     @relation("postcreater")
  joinedPosts Post[]     @relation("participant")
}

model Post {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  startDate       DateTime
  endDate         DateTime
  time            String
  location        String
  activityId      Int
  activity        Activity @relation(fields: [activityId], references: [id])
  creatorId       Int
  creator         User     @relation("postcreater", fields: [creatorId], references: [id])
  participants    User[]   @relation("participant")
  peopleNeeded    Int
  preferredGender String
}

model Activity {
  id    Int    @id @default(autoincrement())
  name  String
  type  String
  posts Post[]
}
