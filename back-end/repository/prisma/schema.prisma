generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement()) @unique
  firstName     String   
  lastName      String
  phoneNumber   String    @unique
  email         String    @unique
  password      String
  gender        String
  interests     Interest[]
  posts         Post[]    
  joinedPosts   Post[]    
}

model Interest { 
  id          Int        @id @default(autoincrement()) 
  name        String 
  description String
  users       User[] 
}

model Post {
  id              Int        @id @default(autoincrement())
  title           String
  description     String
  startDate       DateTime
  endDate         DateTime
  time            String
  activityId      Int
  activity        Activity
  creatorId       Int
  creator         User      
  interestedUsers User[]     
  acceptedUsers   User[]     
  peopleNeeded    Int
  preferredGender String
}

model Activity {
  id   Int    @id @default(autoincrement())
  name String
  type String
}



